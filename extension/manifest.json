{
  "manifest_version": 3,
  "name": "MacTech Contract Scraper",
  "version": "1.0.0",
  "description": "Scrape contract opportunity pages and import to MacTech platform when SAM.gov API limits are reached",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://sam.gov/*",
    "https://*.sam.gov/*",
    "https://www.google.com/*",
    "https://*.google.com/*",
    "http://localhost/*",
    "https://*.railway.app/*",
    "https://*.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://sam.gov/*",
        "https://*.sam.gov/*",
        "https://www.google.com/*",
        "https://*.google.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "MacTech Contract Scraper",
    "default_popup": "popup.html"
  }
}
